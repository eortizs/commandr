# OpenClaw Lite - Configuración de Entorno

# LLM Provider (openai | openrouter)
LLM_PROVIDER=openai

# OpenAI
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4

# OpenRouter (alternativa)
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-key-here
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet
OPENROUTER_REFERER=https://openclaw.local

# Gateway
GATEWAY_HOST=127.0.0.1
GATEWAY_PORT=18789
GATEWAY_TOKEN=your-secret-token

# WhatsApp
WHATSAPP_ENABLED=true
WHATSAPP_SESSION_NAME=openclaw-lite
# WHATSAPP_WHITELIST=5215512345678,5215598765432  # Solo estos números pueden usar el bot (sin + ni espacios)

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/openclaw.log

# Development
NODE_ENV=development
DEBUG=false
